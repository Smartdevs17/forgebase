# Server Configuration
PORT=3001
NODE_ENV=development

# Base Mainnet RPC Configuration
BASE_RPC_URL=https://mainnet.base.org
BASE_ARCHIVE_NODE_URL=https://mainnet.base.org

# Base Sepolia Testnet RPC Configuration (optional - defaults to public testnet nodes)
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org
BASE_SEPOLIA_ARCHIVE_NODE_URL=https://sepolia.base.org

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/forgebase

# API Configuration
API_PREFIX=/api/v1

# CORS Configuration
CORS_ORIGIN=http://localhost:8080

# Cache Configuration
CACHE_TTL=3600

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
